doctype html
html(lang='zh')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title 首页-在线考试系统
    link(href='stylesheets/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheets', href='css/htmleaf-demo.css')
    link(href='stylesheets/signin.css', rel='stylesheet')
    script(src='javascripts/jquery-3.2.1.js')
    script(src='javascripts/bootstrap.min.js')
    script(src='javascripts/index.js')
  body
    .htmleaf-container
      header.htmleaf-header
        //- h1 在线考试系统
      .signin
        .signin-head
          h1 在线考试系统
        form.form-signin(role='form')
          input#username.form-control(type='text', placeholder='用户名', required='', autofocus='')
          p#text-pro 用户名用于您登陆系统
          input#Password.form-control(type='password', placeholder='密码', required='')
          input#text_pwd.btn_none.form-control(type='text', placeholder='请输入验证码', required='',style='width:200px;float:left')
          p#text_pwd_txt.btn_none 验证码
          input#check_pwd.btn_visit.form-control(type='password', placeholder='确认密码', required='',style='display:none;')
          button#btn_sign.btn_none.btn.btn-lg.btn-info.btn-block(type='button') 登录
          input#real_name.btn_visit.form-control(type='text', placeholder='真实姓名', required='', style='display:none;')
          label.btn_none(for='radio')
            p#control
              input#vip(type="radio",name="radio",value="管理员")
              span.text-right 管理员
            p#normal
              input#user(type="radio",name="radio",value="普通用户",checked) 
              span 普通用户
          input#UserClass.btn_visit.form-control(type='text', placeholder='所属班级', required='', autofocus='',style='display:none;')
          button#btn-register1.btn_none.btn.btn-lg.btn-info.btn-block(type='button') 注册
          button#btn-register2.btn_visit.btn.btn-lg.btn-info.btn-block(type='button',style='display:none;') 注册
          button#btn-toLogin.btn_visit.btn.btn-lg.btn-info.btn-block(type='button',style='display:none;') 直接登录
   
